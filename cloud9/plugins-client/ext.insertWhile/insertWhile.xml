<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
      id        = "winExtensionTemplate"
      title     = "Auto While Loop"
      center    = "true"
      modal     = "false"
      buttons   = "close"
      skin      = "bk-window"
      kbclose   = "true"
      class     = "relative"
      width     = "300">
        <a:vbox>
            <a:hbox padding="5" edge="10">
                Please click the add button to add a While Statement
            </a:hbox>
            <a:hbox pack="end" padding="5" edge="6 10 10">
                <a:button 
                  caption = "Close" 
                  skin    = "btn-default-css3"
                  onclick = "
                   require('ext/insertWhile/insertWhile').closeExtensionTemplateWindow();"
                 />
                 <a:button
                  caption = "Add"
                  skin = "btn-default-css3"
                  onclick="
                  require('ext/insertWhile/insertWhile').insertWhile();"
                  />
            </a:hbox>
        </a:vbox>
    </a:window>
</a:application>