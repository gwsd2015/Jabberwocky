<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Profile</h3>

					<p>
						<strong>Name</strong>: <%= user.fname %>
						<strong>Id</strong>: <%= user.id %><br>
						<strong>Email</strong>: <%= user.email %><br>
						<strong>Password</strong>: <%= user.password %><br>
						<br>
						

						</ul>
					</p>

			</div>
		</div>

		<!-- Class Info -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Workspaces:</h3>

					<p>
						<% var length =0; 
						if(!user.classes)
						{
							length = 0;	
						}
						else length = user.classes.length %>
						<strong>Classes</strong> :<ul> <% for(var i = 0; i<length; i++){%>
						<li><%= user.classes[i].classid %></li>
						<% } %>
						</ul>
					</p>

			</div>
		</div>


	</div>

</div>
</body>
</html>
